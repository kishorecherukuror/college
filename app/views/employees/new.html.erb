
<%= form_for @employee, url: {action: "create"} do |f| %>
<% if @employee.errors.present? %>
<div class="errors">
	<p><%= @employee.errors.count %> errors triggered</p>
	<% @employee.errors.full_messages.each do |error| %>
		<%= error %><br />
	<% end %>
</div>
<% end %>

<%= render partial: "form", locals: {f: f} %>

<p> <%= f.submit %></p>
<% end %>
